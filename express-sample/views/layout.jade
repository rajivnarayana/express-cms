doctype html
html
  head
    title= html.title 
    meta(name='viewport', content='initial-scale=1.0, user-scalable=no')
    block scripts
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    block styles
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css')
        style(type='text/css').
            .main-container{ min-height: 82vh; }
            footer{ background: rgba(239, 239, 239, 0.58)}
            .copyRights{ line-height: 55px;}
            footer #navbar{ padding-top: 5px;}
  body
    block header
    
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Driverzz Admin
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href="/admin/requests") Home
                        li
                            a(href="/admin/requests/history") Requests History
                        li
                            a(href="/drivers") Drivers
                        if(user && user.issuperadmin)
                            li
                                a(href="/admin/subadmin") Operators
                            li
                                a(href="/admin/siteconstants") Constants
                            li
                                a(href="/admin/offers") Offers
                            li
                                a(href="/admin/rate_card") Rate Card
                            li
                                a(href="/admin/payments") Payments                                
                            li
                                a(href="/admin/subadmin/#{user._id}/update") Profile                                
                        if(user && user.isadmin)                        
                            li
                                a(href="/admin/#{user._id}/edit") Profile
                        li
                            a(href="/logout") Logout
    
    div.container-fluid.main-container
        block content 
            != html.content
    
    block footer
        footer.footer
            .container
                #footer
                    p.col-xs-6.copyRights Copyright Â© 2016 WebileApps. All rights reserved.
